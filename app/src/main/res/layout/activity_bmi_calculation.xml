<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMI_calculation">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="103dp"
        android:layout_marginBottom="628dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_iphone_12_pro_max___11"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="52dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_dumbbell" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="314dp"
            android:layout_height="67dp"
            android:layout_marginTop="35dp"
            android:text="BMI Calculation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="625dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_age_bmi"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_textview"
                android:text="Enter Age"
                android:textColor="#4F6CDE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_age_num"
                android:layout_width="124dp"
                android:layout_height="36dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_editview_1"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_height_bmi"
                android:layout_width="131dp"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_textview"
                android:text="Enter Height"
                android:textColor="#4F6CDE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_height_num"
                android:layout_width="124dp"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_editview_1"
                android:ems="10"
                android:hint="        in cm"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weight_bmi"
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_textview"
                android:text="Enter Weight"
                android:textColor="#4F6CDE"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_weight_num"
                android:layout_width="124dp"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_editview_1"
                android:ems="10"
                android:hint="        in kgs"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_calculate_bmi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_buttons"

                android:text="Calculate"
                android:textColor="#FFFFFF"
                app:backgroundTint="#CF505F"
                app:iconTint="#DEE1F4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/bmi_signal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_green_circle" />
            <TextView
                android:id="@+id/tv_bmi_value"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_textview"
                android:text=""
                android:textColor="#4F6CDE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tv_bmi_comment"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_textview"
                android:text=""
                android:textColor="#4F6CDE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>