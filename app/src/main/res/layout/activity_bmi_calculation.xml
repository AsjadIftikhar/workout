<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".java.BMI_calculation">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="103dp"
        android:background="@drawable/ic_iphone_12_pro_max___11"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="52dp"
            android:layout_height="57dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_dumbbell" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="314dp"
            android:layout_height="67dp"
            android:layout_marginTop="35dp"
            android:text="BMI Calculation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_age_bmi"
        android:layout_width="128dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_textview"
        android:text="Enter Age"
        android:textColor="#4F6CDE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/tv_age_num"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_editview_1"
        android:ems="10"
        android:hint="in years"
        android:paddingLeft="60dp"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_height_bmi"
        android:layout_width="131dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_textview"
        android:text="Enter Height"
        android:textColor="#4F6CDE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_bmi" />

    <EditText
        android:id="@+id/tv_height_num"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_editview_1"
        android:ems="10"
        android:hint="in cm"
        android:paddingLeft="60dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_num" />

    <TextView
        android:id="@+id/tv_weight_bmi"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_textview"
        android:text="Enter Weight"
        android:textColor="#4F6CDE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_height_bmi" />

    <EditText
        android:id="@+id/tv_weight_num"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_editview_1"
        android:ems="10"
        android:hint="in kgs"
        android:paddingLeft="60dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_height_num" />

    <Button
        android:id="@+id/btn_calculate_bmi"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_buttons"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#CF505F"
        app:iconTint="#DEE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_weight_bmi" />

    <ImageView
        android:id="@+id/bmi_signal"
        android:layout_width="192dp"
        android:layout_height="92dp"
        android:layout_marginTop="48dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculate_bmi"
        app:srcCompat="@drawable/ic_green_circle" />

    <TextView
        android:id="@+id/tv_bmi_value"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_textview"
        android:text=""
        android:textAlignment="center"
        android:textColor="#4F6CDE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmi_signal" />

    <TextView
        android:id="@+id/tv_bmi_comment"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_textview"
        android:text=""
        android:textAlignment="center"
        android:textColor="#4F6CDE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmi_value" />

</androidx.constraintlayout.widget.ConstraintLayout>